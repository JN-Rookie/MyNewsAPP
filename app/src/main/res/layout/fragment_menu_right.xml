<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_slidingmenu_left">
    <RelativeLayout
        android:id="@+id/relativelayout_unlogin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_login"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/iv_login"
            android:textColor="#f1eeee"
            android:textSize="40dp"
            android:text="立即登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:background="#f9f3f3"
        android:id="@+id/layout_share"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="141dp">

        <ImageView
            android:id="@+id/fun_friend"
            android:src="@drawable/fun_share_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/fun_qq"
            android:src="@drawable/addimport_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/fun_friends"
            android:src="@drawable/fun_share_friends"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/fun_weibo"
            android:src="@drawable/fun_share_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


    </LinearLayout>

</RelativeLayout>
